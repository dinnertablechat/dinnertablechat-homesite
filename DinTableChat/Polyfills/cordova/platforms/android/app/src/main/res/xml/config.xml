<?xml version='1.0' encoding='utf-8'?>
<widget id="chat.dinnertable" version="0.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>DinTableChat</name>
    <description>
        A live debate platform
    </description>
    <author email="team@dinnertable.chat" href="http://dinnertable.chat">
        Dinnertable Team
    </author>
    <content src="https://dinnertable.chat/index.html?app=true" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation hap-rule="yes" href="https://dinnertable.chat/*" />
    <allow-intent href="market:*" />
    <icon density="mdpi" src="/logos/icons/android-36x36.png" />
    <icon density="ldpi" src="/logos/icons/android-36x36.png" />
    <icon density="xxxhdpi" src="/logos/icons-192.png" />
    <icon density="xxhdpi" src="/logos/icons-192.png" />
    <icon density="xhdpi" src="/logos/icons-192.png" />
    <icon density="hdpi" src="/logos/icons-192.png" />
    <splash density="land-hdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-hdpi.png" />
    <splash density="land-ldpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-ldpi.png" />
    <splash density="land-mdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-mdpi.png" />
    <splash density="land-xhdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-xhdpi.png" />
    <splash density="port-hdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-hdpi.png" />
    <splash density="port-ldpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-ldpi.png" />
    <splash density="port-mdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-mdpi.png" />
    <splash density="port-xhdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-xhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Fullscreen" value="false" />
    <feature name="Permissions">
        <param name="android-package" value="com.android.plugins.Permissions" />
    </feature>
</widget>
