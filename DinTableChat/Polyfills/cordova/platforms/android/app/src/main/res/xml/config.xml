<?xml version='1.0' encoding='utf-8'?>
<widget id="chat.dinnertable" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Permissions">
        <param name="android-package" value="com.android.plugins.Permissions" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="KwebRTCPermission">
        <param name="android-package" value="in.co.indusnet.cordova.plugins.webrtc.permission.KwebRTCPermission" />
    </feature>
    <feature name="Diagnostic">
        <param name="android-package" value="cordova.plugins.Diagnostic" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_Location">
        <param name="android-package" value="cordova.plugins.Diagnostic_Location" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_Bluetooth">
        <param name="android-package" value="cordova.plugins.Diagnostic_Bluetooth" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_Wifi">
        <param name="android-package" value="cordova.plugins.Diagnostic_Wifi" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_Camera">
        <param name="android-package" value="cordova.plugins.Diagnostic_Camera" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_Notifications">
        <param name="android-package" value="cordova.plugins.Diagnostic_Notifications" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_NFC">
        <param name="android-package" value="cordova.plugins.Diagnostic_NFC" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Diagnostic_External_Storage">
        <param name="android-package" value="cordova.plugins.Diagnostic_External_Storage" />
        <param name="onload" value="true" />
    </feature>
    <name>DinTableChat</name>
    <description>
        A live debate platform
    </description>
    <author email="team@dinnertable.chat" href="http://dinnertable.chat">
        Dinnertable Team
    </author>
    <content src="https://dinnertable.chat" />
    <access origin="*" />
    <access origin="https://auth.dinnertable.chat" />
    <access origin="https://*.dinnertable.chat" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <log level="RELEASE" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation hap-rule="yes" href="https://dinnertable.chat/*" />
    <allow-intent href="market:*" />
    <framework src="com.android.support:support-v4:+" />
    <config-file parent="/manifest" target="AndroidManifest.xml">
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
        <uses-permission android:name="android.permission.WAKE_LOCK" />
        <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    </config-file>
    <icon density="mdpi" src="/logos/icons/android-36x36.png" />
    <icon density="ldpi" src="/logos/icons/android-36x36.png" />
    <icon density="hdpi" src="/logos/icons-192.png" />
    <icon density="xhdpi" src="/logos/icons-192.png" />
    <icon density="xxhdpi" src="/logos/icons-192.png" />
    <icon density="xxxhdpi" src="/logos/icons-192.png" />
    <splash density="land-hdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-hdpi.png" />
    <splash density="land-ldpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-ldpi.png" />
    <splash density="land-mdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-mdpi.png" />
    <splash density="land-xhdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/land-xhdpi.png" />
    <splash density="port-hdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-hdpi.png" />
    <splash density="port-ldpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-ldpi.png" />
    <splash density="port-mdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-mdpi.png" />
    <splash density="port-xhdpi" hap-default-image="yes" src="plugins/cordova-plugin-hostedwebapp/assets/defaultImages/android/port-xhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="cordova.plugins.diagnostic.modules" value="MICROPHONE" />
    <preference name="OverrideUserAgent" value="Mozilla/5.0 Google PWA" />
    <preference name="Fullscreen" value="false" />
</widget>
