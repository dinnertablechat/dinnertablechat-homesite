{
  "compilerOptions": {
    "rootDirs": ["src/"],
    "baseUrl": "src",
    "paths": {
      "src/*": ["*"]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "typings",
    "images.d.ts"
  ],
  "exclude": [
    "backend",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "proxy.js",
    "*.md",
    "CHANGELOG.md",
    "awsmobilejs",
    "/assets",
    "public",
    "/backend"
  ]
}
